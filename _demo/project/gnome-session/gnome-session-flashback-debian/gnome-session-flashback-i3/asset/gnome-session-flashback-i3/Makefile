default: help
.PHONY: default

help:
	@echo 'Usage:'
	@echo '	$$ make [action]'
	@echo
	@echo 'Example:'
	@echo '	$$ make'
	@echo '	$$ make help'
	@echo
	@echo '	$$ make prepare'
	@echo	
	@echo '	$$ make install'
	@echo
	@echo '	$$ make remove'
.PHONY: help




prepare:
	./prepare.sh
.PHONY: prepare


install:
	./install.sh
.PHONY: install


remove:
	./remove.sh
.PHONY: remove
